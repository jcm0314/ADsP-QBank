generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Question {
  id          String   @id @default(cuid())
  title       String
  content     String
  category    String
  difficulty  Int
  options     String
  answer      Int
  explanation String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
